<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:id="@+id/headerMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_marginTop="30dp">

                    <EditText
                        android:id="@+id/cityFilter"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_imput"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="Ciudad"
                        android:padding="5dp"
                        android:layout_marginRight="20dp"/>

                    <EditText
                        android:id="@+id/priceFilter"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_imput"
                        android:ems="10"
                        android:hint="Precio max."
                        android:inputType="number"
                        android:padding="5dp"/>

                </LinearLayout>

                <Button
                    android:id="@+id/searchButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ff8000"
                    android:layout_gravity="center"
                    android:text="Buscar" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true">

        </androidx.recyclerview.widget.RecyclerView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardElevation="50dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:id="@+id/navFooter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">



            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/postingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="90dp"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_add"
        android:backgroundTint="#ff8000"
        app:maxImageSize="50dp"
        app:borderWidth="1dp" />


</FrameLayout>