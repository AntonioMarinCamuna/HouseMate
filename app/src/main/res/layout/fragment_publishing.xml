<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublishActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50px"
        android:background="@drawable/custom_dialog">


        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="90dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/roomImage"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:background="@color/black"
                android:clickable="true"
                app:srcCompat="@android:drawable/ic_menu_camera"/>

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/roomTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Título"
            android:background="@drawable/custom_imput"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/roomCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Ciudad"
            android:background="@drawable/custom_imput"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/roomAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/custom_imput"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Dirección"/>

        <EditText
            android:id="@+id/maxDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:background="@drawable/custom_imput"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Estancia máxima (días)"/>

        <EditText
            android:id="@+id/roomDescription"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:background="@drawable/custom_imput"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Descripción (max. 150 caracteres)"
            android:gravity="top"
            android:maxLength="150" />

        <EditText
            android:id="@+id/roomPrice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:ems="10"
            android:inputType="numberDecimal"
            android:background="@drawable/custom_imput"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Precio"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:backgroundTint="@color/black"
                android:layout_weight="1"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/publishButton"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:backgroundTint="#ff8000"
                android:text="Publicar"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>